import './canonical.pg' ;


block: Block {2} | Line {1} ;

@node
Block {mod:'block'}: BLOCK_START body=Line* BLOCK_END ;

@node
Line {mod:'block'}: content=( canonical.statements.statement {2} | canonical.expressions.expression {1} ) LINE_END ;


terminals

BLOCK_START: '{' ;
BLOCK_END:   '}' ;

LINE_END: ';' ;
